// Kadane's algorithm
#include<bits/stdc++.h>
#define lli long long int
using namespace std;

int kadane(int arr[], int n) {
    int curr_sum = 0, max_sum = 0;
    
    for(int i = 0; i < n; i++) {
        // adding to current sum
        curr_sum += arr[i];
        // ignoring negative values
        if(curr_sum < 0) {
            curr_sum = 0;
        }
        max_sum = max(max_sum, curr_sum);
    }
    return max_sum;
}

int main() {
    int arr[] = {-2,3,4,-1,5,-12,6,1,3};
    int n = sizeof(arr)/sizeof(int);
    
    cout << kadane(arr, n);
    
    return 0;
}